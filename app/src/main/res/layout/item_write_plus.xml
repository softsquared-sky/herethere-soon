<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_width="160dp"
    android:layout_height="121dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:padding="0dp"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_write_background_plus"
        android:src="@drawable/btn_write"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:button="@drawable/ic_radio_button_false"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_write_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_write_plus"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_write_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#282d2d"
            android:lineSpacingExtra="6sp"
            android:text="@string/write_plus"/>

    </LinearLayout>


</RelativeLayout>